@model List<PortfolioProjectNight.Models.Expertience>
    @{
        ViewBag.Title = "ExperienceList";
        Layout = "~/Views/Admin/Index.cshtml";
    }


    <h2 class="mb-4">Yetenek Listesi ve İşlemleri</h2>

    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Başlık</th>
            <th>Alt Başlık</th>
            <th>Açıklama</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ExpertienceId</td>
                <td>@item.Title</td>
                <td>@item.SubTitle</td>
                <td>@item.Description</td>
                <td><a href="/Experience/DeleteExperience/@item.ExpertienceId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Experience/UpdateExperience/@item.ExpertienceId" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <td><a href="/Skill/CreateExperience/" class="btn btn-info">Yeni Deneyim Girişi</a></td>
